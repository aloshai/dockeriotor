{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
